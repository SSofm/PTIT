<div class="row">
        {{#each book}}
        
            <div class="col-sm-6 col-lg-3">
            <div class="card mod__card" style="width: 18rem; height: 700px;">
                <a href="/books/{{this.slug}}">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                </a>
                <div class="card-body">
                    <a href="/books/{{this.slug}}">
                    <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/books/{{this.slug}}" class="btn btn-primary">Read more</a>
                </div>
            </div>
        </div>
        
        {{/each}}
    </div>


